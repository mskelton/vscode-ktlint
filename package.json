{
  "name": "ktlint",
  "displayName": "Ktlint",
  "version": "0.1.0",
  "description": "Format Kotlin files using ktlint",
  "categories": [
    "Formatters"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mskelton/vscode-ktlint"
  },
  "publisher": "mskelton",
  "files": [
    "out/**/*",
    "LICENSE"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint .",
    "format": "oxfmt .",
    "format:check": "oxfmt --check ."
  },
  "devDependencies": {
    "@mskelton/eslint-config": "^9.2.0",
    "@types/node": "^22.15.17",
    "@types/vscode": "^1.60.0",
    "eslint": "^9.29.0",
    "oxfmt": "^0.33.0",
    "typescript": "^5.8.3"
  },
  "contributes": {
    "languages": [
      {
        "id": "kotlin",
        "extensions": [
          ".kt",
          ".kts"
        ]
      }
    ]
  },
  "activationEvents": [
    "onLanguage:kotlin"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "packageManager": "yarn@4.12.0"
}
